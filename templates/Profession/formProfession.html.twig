{% extends 'layout.html.twig' %}

{% block content %}

    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Ajout d'un Métier</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('main_home') }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('profession_home') }}">Métiers</a>
                </li>
                <li class="breadcrumb-item">Ajout d'un métier</li>
            </ul>
        </div>
        <div class="tile">
            {{ form_start(createFormular,{'attr': {'class': 'form-horizontal'} }) }}
            <section>
                <h3>Informations générales</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">
                        <div class="form-group row">
                            {{ form_label(createFormular.name, null,{'label_attr': {'class': 'control-label col-md-3'} }) }}
                            <div class="col-md-9">
                                {{ form_errors(createFormular.name, {'attr': {'class': 'form-control-feedback text-danger'} }) }}
                                {{ form_widget(createFormular.name, {'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <hr/>
            <div class="row">
                <div class="offset-md-6 col-md-6">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                </div>
            </div>
            {{ form_end(createFormular) }}
                {% if userProfession ==[] %}
            <div class="offset-md-6 col-md-6">
                <a href="{{ path('profession_delete', { 'id':prof.id}) }}" class="btn btn-danger">
                    <i class="fa fa-trash"></i>Supprimer
                </a>
            </div>
            {% endif %}
        </div>
    </main>

{% endblock %}